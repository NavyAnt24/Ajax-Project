<form action="<%= secrets_url %>" method="post">
	<input 	type="hidden"
					name="authenticity_token"
					value="<%= form_authenticity_token %>">

	<label for="secret_title">Title of Secret:</label>
	<input 	type="text"
					name="secret[title]"
					id="secret_title">

	<input 	type="hidden"
					name="secret[recipient_id]"
					value="<%= params[:user_id] %>">

	<input type="submit" value="Post Secret!">
</form>